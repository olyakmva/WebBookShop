@model IEnumerable<BookShop2020.Models.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}
<br/>
<h2>Список книг</h2>

<p>
    @Html.ActionLink("Добавить книгу", "Create", null,new{@class ="btn btn-secondary "} )
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Number)
        </th>
        <th>
            @Html.Label("Жанр")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre.Name)
        </td>
        <td>
            @Html.ActionLink(HttpUtility.HtmlDecode("&#9999;"), "Edit", new { id = item.Id }) |
            @Html.ActionLink(HttpUtility.HtmlDecode("&#128270;"), "Details", new { id = item.Id }) |
            @Html.ActionLink(HttpUtility.HtmlDecode("&#10060;"), "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
